<div class="col-sm-6 col-md-4 col-md-offset-4">
	<h1 class="text-center login-title">Inscreva-se</h1>
	<div class="account-wall">

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-signin"}) do |f| %>
		<%= devise_error_messages! %>

		<%= f.label :'E-mail:' %><br />
		<%= f.email_field :email, :autofocus => true, class: "form-control" %>

		<%= f.label :'Senha:' %> <% if @validatable %><i>(MÃ­nimo de <%= @minimum_password_length %> caracteres)</i><% end %><br />
		<%= f.password_field :password, autocomplete: "off", class: "form-control" %>

		<%= f.label :'Confirme a senha:' %><br />
		<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

		<%= f.submit "Inscreva-se", class: "btn btn-lg btn-primary btn-block" %>

		<% end %>
	</div>
	<div class="text-center new-account">
		<%= render "devise/shared/links" %>
	</div>
</div>
