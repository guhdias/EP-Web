<div class="col-sm-6 col-md-4 col-md-offset-4">
	<h1 class="text-center login-title">Esqueceu sua senha?</h1>
	<div class="account-wall">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin", method: :post}) do |f| %>
		<%= devise_error_messages! %>

		<%= f.label :'E-mail:' %><br />
		<%= f.email_field :email, :autofocus => true, class: "form-control" %>

		<br>

		<%= f.submit "Envie-me instruções", class: "btn btn-lg btn-primary btn-block" %>

		<% end %>
	</div>
	<div class="text-center new-account">
		<%= render "devise/shared/links" %>
	</div>
</div>
