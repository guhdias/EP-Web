<div class="col-md-9 col-md-push-2">
    <p id="notice"><%= notice %></p>

<div class="well profile">
  <div class="col-sm-12">
    <div class="col-xs-12 col-sm-8">
      <h2><%= @produto.descricao %></h2>
      <p><strong>Tipo: </strong> <% @tipo = Tipo.find(@produto.tipo_id) %> <%= @tipo.tipo %> </p>
      <p><strong>Valor: </strong> <%= @produto.valor %> </p>
      <p><strong>Saldo: </strong> <%= @produto.saldo %> </p>
      <p><strong>CÃ³digo de Barras: </strong> <%= @produto.cbarras %> </p>      
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <figure>

        <%= image_tag "http://thuthuat365.com/wp-content/uploads/2014/08/photo_default_0.png", size: "240", class: "img-circle img-responsive" %>

        <figcaption class="ratings">
          <p>Imagem do Produto</p>
       </figcaption>
     </figure>
   </div>
 </div>
 <div class="col-xs-12 divider text-center">
  <div class="col-xs-12 col-sm-4 emphasis">
    <%= link_to edit_produto_path(@produto), class:"btn btn-primary btn-block" do %>
    <span class="fa fa-edit"></span> Editar
    <% end %>
  </div>  
  <div class="col-xs-12 col-sm-4 emphasis">
    <%= link_to @produto, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class:"btn btn-danger btn-block"  do %>
    <span class="fa fa-trash"></span> Excluir
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-4 emphasis">
    <%= link_to produtos_path, class:"btn btn-success btn-block" do %>
    <span class="fa fa-arrow-circle-left "></span> Voltar
    <% end %>
  </div>
</div>
</div>
